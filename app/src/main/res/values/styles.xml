<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:textColorPrimary">@color/app_style_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/app_style_color</item>
        <item name="colorPrimaryDark">@color/app_style_color</item>
        <item name="colorAccent">@color/app_style_color</item>
    </style>

    <style name="LauncherAppTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@mipmap/splash_page</item>
    </style>

</resources>
